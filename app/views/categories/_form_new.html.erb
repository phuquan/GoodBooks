
<%= form_for @category, html:{:class => "form-horizontal form-label-left", 'data-parsley-validate' => ''} do |f| %>

  	<div class="form-group">
    	<label class="control-label" for="first-name">Name <span class="required">*</span>
    	</label>
      <input type="text" name="category" class="form-control" required="required" />
      <% if @category.errors[:category].any? %>
        <% @category.errors.messages[:category].each do |msg| %>
          <p style="color: #E74C3C">Categories name <%= msg %></p>
        <% end %>
      <% end %>
    	<p class="help-block">The name is how it appears on your site.</p>
  	</div>
  	<div class="form-group">
    	<label class="control-label" for="last-name">Slug
    	</label>
      <input type="text" name="slug" class="form-control" />
      <% if @category.errors[:slug].any? %>
        <% @category.errors.messages[:slug].each do |msg| %>
          <p style="color: #E74C3C">Slug <%= msg %></p>
        <% end %>
      <% end %>
    	<p class="help-block">The “slug” is the URL-friendly version of the name. Ex: If you enter "amazing-nails", url will be "domain.com/category/amazing-nails"</p>
  	</div>
  	<div class="ln_solid"></div>
  	<div class="form-group">
      	<button type="submit" class="btn btn-success">Submit</button>
  	</div>

<% end %>