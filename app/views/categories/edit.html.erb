<% provide(:title, "HTube | Admin") %>

<% content_for :back_end_main do %>
	<div class="right_col" role="main">
 
	    <div class="">
	        <div class="page-title">
	            <div class="title_left">
	                <h3>
	                    Categories
	                </h3>
	            </div>
	        </div>
	        <div class="clearfix"></div>
	 
	        <div class="row">
	            <div class="col-sm-12">
	                <div class="x_panel">
	                    <div class="x_title">
	                        <h2><a href="<%= categories_path %>">Categories</a> / <%= @category.category %></h2>
	                        <ul class="nav navbar-right panel_toolbox">
	                            <li class="pull-right"><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
	                        </ul>
	                        <div class="clearfix"></div>
	                    </div>
	                    <div class="x_content">
	                        <!-- content starts here -->
	                        <%= render 'categories/form_edit' %>
	                        <!-- content ends here -->
	                    </div>
	                </div>
	            </div>
	        </div>
	    </div>
	</div>
<% end %>'

<% content_for :add_js do %>
	<script type="text/javascript">
		$(document).ready(function(){
			<% if flash[:notice] %>
				new PNotify({
	              	title: 'Success',
	              	text: '<%= flash[:notice] %>',
	              	type: 'success',
	              	delay: 2000,
	              	styling: 'bootstrap3'
	          	});
          	<% end %>

          	<% if @category.errors.any? %>
          		<% @category.errors.full_messages.each do |msg| %>
					new PNotify({
		              	title: 'Error',
		              	text: '<%= msg %>. Update fail',
		              	type: 'error',
		              	hide: false,
		              	delay: 3000,
		              	styling: 'bootstrap3'
		          	});
          		<% end %>
          	<% end %>
		})
	</script>
<% end %>

<% extends_layout "back_end/layouts/master" %>